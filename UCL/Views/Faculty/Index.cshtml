@model UCL.ViewModels.FacultyViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Faculties</h2>

<p>
    @Html.ActionLink("Add a new faculty", "Create", null, new { @class = "btn badge-info" })
</p>
<table class="table table-dark" table-sm table-striped table-hover w-auto">
    <tr>
        <th>
            Faculty Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Faculties)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FacultyId }, new { @class = "badge badge-info" })
                @Html.ActionLink("Details", "Details", new { id = item.FacultyId }, new { @class = "badge badge-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.FacultyId }, new { @class = "badge badge-danger" })
            </td>
        </tr>
    }

</table>
