@model UCL.ViewModels.ProgrammeViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Programmes</h2>

<p>
    @Html.ActionLink("Add a new programme", "Create", null, new { @class = "btn badge-info" })
</p>
@if (Model.Programmes != null)
{
    <table class="table table-dark" table-sm table-striped table-hover w-auto">
        <tr>
            <th>Title</th>
            <th>Fee</th>
            <th>Faculty</th>
            <th>Updates</th>
        </tr>

        @foreach (var item in Model.Programmes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProgrammeTitle)
            </td>
     
            <td>
                @Html.DisplayFor(modelItem => item.ProgrammeFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FacultyName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProgrammeId }, new { @class = "badge badge-info" })
                @Html.ActionLink("Details", "Details", new { id = item.ProgrammeId }, new { @class = "badge badge-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ProgrammeId }, new { @class = "badge badge-danger" })
            </td>
        </tr>
        }
    </table>
}
else
{
    <p>No programmes available. Please create one.</p>
}
